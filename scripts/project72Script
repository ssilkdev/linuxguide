#!/bin/bash
trap '' ERR
echo "===Step 2==="
echo "$(cat /etc/nsswitch.conf | less)"
echo "===Step 3==="
echo "$(cat /etc/nsswitch.conf | grep nisplus)"
echo "===Step 4==="
echo "$(cat /etc/nsswitch.conf | grep nisplus | tr n N)"
echo "===Step 5==="
echo "$(cat /etc/nsswitch.conf | grep nisplus | tr n N | sort -r)" 
echo "===Step 6==="
echo "$(cat /etc/nsswitch.conf | grep nisplus | tr n N | sort -r tee file)"
echo "$(cat file)"
echo "===Step 7==="
echo "$(cat /etc/nsswitch.conf | grep nisplus | tr n N | sort -r | tee file | wc -l)"
echo "$(cat file)"
echo "===Step 8==="
echo "$(cat /etc/nsswitch.conf/ | grep nisplus | sed /#/d | sed /public/s/nisplus/NISPLUS)"
echo "===Step 9==="
echo "$(cat /etc/hosts)"
echo "$(cat /etc/hosts | awk'/localhost/ {print $1, $3}')"
